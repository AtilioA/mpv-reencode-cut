{
    "name": "mpv-reencode-cut",
    "version": "1.0.0",
    "description": "MPV script for cutting and re-encoding videos",
    "main": "scripts/mpv-reencode-cut/dist/make_cuts.js",
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "clean": "rimraf scripts/mpv-reencode-cut/dist",
        "prebuild": "npm run clean",
        "dev": "tsc -w",
        "predeploy:win": "if exist \"%APPDATA%\\mpv\\scripts\\mpv-reencode-cut\" rmdir /S /Q \"%APPDATA%\\mpv\\scripts\\mpv-reencode-cut\"",
        "deploy:win": "node scripts/package-release.js \"%APPDATA%\\mpv\"",
        "deploy:unix": "node scripts/package-release.js \"$HOME/.config/mpv\"",
        "deploy": "npm run prebuild && npm run build && npm run predeploy:win && npm run deploy:win",
        "package": "node scripts/package-release.js"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.0.0",
        "archiver": "^6.0.1",
        "rimraf": "^5.0.0",
        "typescript": "^5.0.0"
    }
}
